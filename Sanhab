#include <stdio.h>

int main(){
    int n,i,j;
    scanf("%d",&n);
    char p1[n+1][n+1];
    char player2[n+1][n+1];
    for(i=0;i<n+1;i++){
        p1[0][i]=i+48;         /*Grid for player 1 board*/
        p1[i][0]=i+48;
    }
    for(i=1;i<n+1;i++){
        for(j=1;j<n+1;j++){
            p1[i][j]='-';      /*Filling the sea of player 1*/
        }
    }
    for(i=0;i<n+1;i++){
        player2[0][i]=i+48;         /*Grid for player 2 board*/
        player2[i][0]=i+48;
    }
    for(i=1;i<n+1;i++){
        for(j=1;j<n+1;j++){
            player2[i][j]='-';      /*Filling the sea of player 2*/
        }
    }
    for(i=0;i<n+1;i++){
        for(j=0;j<n+1;j++)printf("%c ",p1[i][j]);
        printf("  |  ");                                /*Printing the boards*/
        for(j=0;j<n+1;j++)printf("%c ",player2[i][j]);
        printf("\n");
    }
    return 0;
}