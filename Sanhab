#include <stdio.h>

int main(){
    int n,i,j;
    scanf("%d",&n);
    char board[n+1][n+1];
    for(i=0;i<n+1;i++){
        board[0][i]=i+48;         /*Grid for map*/
        board[i][0]=i+48;
    }
    for(i=1;i<n+1;i++){
        for(j=1;j<n+1;j++){
            board[i][j]='-';      /*Filling the sea*/
        }
    }
    for(i=0;i<n+1;i++){
        for(j=0;j<n+1;j++){
            printf("%c ",board[i][j]);     /*Test printing*/
        }
        printf("\n");
    }
    return 0;
}